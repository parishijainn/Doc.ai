# CareZoom – copy to .env (backend) or .env.local (frontend) as needed

# ============ Backend (backend/.env) ============
PORT=4000
NODE_ENV=development

# Tavus – AI avatar (optional; uses mock if missing)
TAVUS_API_KEY=
TAVUS_REALTIME_API_KEY=

# LLM (triage + summary + vision; uses mock if missing)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o

# Maps (optional; mock if missing)
MAPBOX_ACCESS_TOKEN=   # or GOOGLE_MAPS_API_KEY for geocode/POI
OSRM_BASE_URL=http://router.project-osrm.org/route/v1  # public demo server

# Local persistence (MVP)
VISIT_DB_PATH=./logs/visits.json

# Tavus persona/replica defaults (for /api/visit/start)
TAVUS_PERSONA_ID=
TAVUS_REPLICA_ID=

# Audit / storage (optional)
AUDIT_LOG_PATH=./logs/audit.json
DATA_RETENTION_DAYS=30

# ============ Frontend (frontend/.env.local) ============
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_TAVUS_APP_ID=   # if using Tavus client-side
NEXT_PUBLIC_APP_URL=        # set to ngrok/deployed URL for caregiver links
