# ============ Backend (backend/.env) ============
PORT=4000
NODE_ENV=development

# Tavus (CVI "Zoom meeting" mode)
TAVUS_API_KEY=
TAVUS_REALTIME_API_KEY=
TAVUS_PERSONA_ID=
TAVUS_REPLICA_ID=

# Force demo (always use /mock-meeting)
FORCE_MOCK_MEETING=0

# LLM (optional; summary + vision)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o

# Maps / routing
MAPBOX_ACCESS_TOKEN=
OSRM_BASE_URL=http://router.project-osrm.org/route/v1

# Local persistence (MVP)
VISIT_DB_PATH=./logs/visits.json
AUDIT_LOG_PATH=./logs/audit.json
DATA_RETENTION_DAYS=30

# ============ Frontend (frontend/.env.local) ============
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_APP_URL=
NEXT_PUBLIC_TAVUS_APP_ID=

